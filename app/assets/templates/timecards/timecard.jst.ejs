<div class="full-timecard">
<div class="timecard_header">
	<div class="row-fluid">
		<div class="span12">
			<h3><%= model.getFullName()  %></h3>
			<% if (role) {  %>
			    <div class="timecards-action signup-button-container">
                <a href="/projects/new">Add new</a>
                </div>
			<% } %>
		</div>
	</div>
	
	<div class="row-fluid">
		<div class="span12"><label><%= model.getTimespanLabel() %></label></div>
	</div>
</div>
<div class="timecard_body row-fluid">
	<div class="span5 timecard">
		<div class="row-fluid text">
			 <label> <%= moment(model.get('timestamp_in')) %></label>
		</div>
		<div class="row-fluid">
			<div class="span5">
				<div class="avatar avatar-in timecard-square"></div>
			</div>
			<div class="span5 offset1">
				<div id="map_in" class="map"></div>
			</div>
		</div>
	</div>
	<% if (!model.isMissingClockOut()) {  %>
	<div class="span5 timecard">
		<div class="row-fluid text">
			 <label> <%= moment(model.get('timestamp_out')) %></label>
		</div>
		<div class="row-fluid">
			<div class="span5">
				<div class="avatar avatar-out timecard-square"></div>
			</div>
			<div class="span5 offset1">
				<div id="map_out" class="map"></div>
			</div>
		</div>
	</div>
	<% } %>
</div>
</div>