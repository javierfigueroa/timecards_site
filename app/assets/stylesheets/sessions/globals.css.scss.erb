@import "sessions/variables";

body {
  background-color: $background;
    margin: 0;
    padding: 0;
}
 
 a, a:hover {
  font-family: "Open Sans";
  text-decoration: none;
 }


.form-field {
  font-size: $font-size !important;
  padding-top: 6px !important;
  text-align: center !important;
  font-family: "Open Sans";
  margin: 5px;
}


.form{
  text-align: center !important;
  color: $font-color;
  font-family: "Open Sans";
  height: 100%;
  padding: 50px;
  position: absolute;
  margin-bottom: 100px;
}

a, a:visited{
  font-size: 40px;
  color: #ffffff;
  font-weight: bold;
}

.submit-button {
  color: $font-color;
  font-size: $font-size !important;
  font-family: "Open Sans";
  font-weight: lighter;
  margin: 5px 0px;
  padding: 10px;
}

select {
  padding: 5px;
  margin: 5px;
  line-height: 1;
  -webkit-appearance: none;
  width: 240px;
  height: 40px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  background-color: #f7f7f7;
  border: solid 1px #e4e4e4;
  font-size: $font-size !important;
  padding-top: 6px !important;
  text-align: center !important;
  font-family: "Open Sans";
  box-sizing: border-box;
}

label {
    display: inline-block !important;
    text-align: left;
    min-width: 200px;
}

.controls {
    display:  inline-block;
}

.button-field {
    margin-right: 18px;
    text-align: right;
}

.simple_form input {
    margin: 5px;
}