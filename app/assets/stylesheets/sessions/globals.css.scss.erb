@import "sessions/variables";

html {
    height: 100%;
}
body {
    background-color: $background;
    margin: 0;
    padding: 0;
    height: 100%;
}

.container {
    height: 100%;
}
 
 a, a:hover {
  font-family: "Open Sans";
  text-decoration: none;
 }


.form-field {
  font-size: $font-size !important;
  padding-top: 6px !important;
  text-align: center !important;
  font-family: "Open Sans";
  margin: 5px;
}


.form{
  text-align: center !important;
  font-family: "Open Sans";
    height: 100%;
    position:relative;
    z-index:0;
    overflow:hidden;
    color: $font-color;

    /*background: url(<%= image_path("home/bg.jpg") %>) no-repeat center center;*/
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}

a, a:visited{
  font-size: 40px;
  color: #ffffff;
  font-weight: bold;
}

.submit-button {
  color: $font-color;
  font-size: $font-size !important;
  font-family: "Open Sans";
  font-weight: lighter;
  margin: 5px 0px;
  padding: 10px;
}

select {
  padding: 5px;
  margin: 5px;
  line-height: 1;
  -webkit-appearance: none;
  width: 240px;
  height: 40px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  background-color: #f7f7f7;
  border: solid 1px #e4e4e4;
  font-size: $font-size !important;
  padding-top: 6px !important;
  text-align: center !important;
  font-family: "Open Sans";
  box-sizing: border-box;
}

label {
    display: inline-block;
    text-align: right;
    min-width: 200px;
}

.controls {
    display:  inline-block;
}

.simple_form input {
    margin: 5px;
}

.brand {
    padding-bottom: 20px;
    padding-top: 40px;
}

form a, .devise-links a {
    font-weight: inherit !important;
    font-size: 14px;
    display: block;
    padding-top: 20px;
}

.help-inline {
    color: $font-color;
}

p, .info-message, #flash_alert {
    color: $font-color;;
}

form .alert button {
    display: none;
}