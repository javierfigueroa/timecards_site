<div class="span12">
  <h3>Projects</h3>

  <div class="table-actions">
    <%= link_to 'Add new', new_project_path, :class => 'action' %>
    </div>
  <% if @projects.length > 0 %>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created</th>
      <th style="width: 20px;"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
      	<td><%= project.created_at.to_date %></td>
        <td style="width: 125px;">
            <%= link_to 'Edit', edit_project_path(project), :class => 'action' %>
        </td>
        <td style="width: 125px;">
            <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'action' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  <% end %>
</div>
