<h3 style="padding-left: 30px;">Projects</h3>

<div class="timecards-action signup-button-container">
<%= link_to 'Add new', new_project_path %>
</div>
<% if @projects.length > 0 %>
<div class="span12">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created</th>
      <th style="width: 20px;"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
      	<td><%= project.created_at.to_date %></td>
        <td style="width: 125px;">
          <div class="timecards-action">
            <%= link_to 'Edit', edit_project_path(project) %>
          </div>
        </td>
        <td style="width: 125px;">
          <div class="timecards-action">
            <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<% end %>
