<div style="text-align: center" class="pad30">
<h3>Edit User</h3>

<%= simple_form_for(@user, :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
    <%= f.error_notification %>
    <%= display_base_errors @user %>
    <%= f.input :first_name, :autofocus => true, :placeholder => "first name"  %>
    <%= f.input :last_name, :placeholder => "last name"  %>
    <%= f.input :email, :required => true, :placeholder => "email"  %>
    <%= f.input :password, :placeholder => "password", :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
    <%= f.input :password_confirmation, :required => false, :placeholder => "confirm password"  %>
    <%= f.button :submit, 'Update', :class => 'btn-primary' %>
<% end %>
<div class="pad20">
  <%= link_to((@user.has_role? :admin) ? "Make Employee" : "Make Admin", {:controller => 'users', :action => 'update', :id => @user.id, :user => { :role_ids => Role.find_by_name((@user.has_role? :admin) ? "employee" : "admin").id } }, :method => :put)  %> |
  <%= link_to("Delete", user_path(@user), :data => { :confirm => "Are you sure?" }, :method => :delete)  %> | 
  <%= link_to "Back", :back %>
</div>
</div>