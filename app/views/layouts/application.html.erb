<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Timecards" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Timecards" %>">
    <%= stylesheet_link_tag "app/application", :media => "all" %>
    <script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
 	<body class="<%= controller_name %> <%= action_name %>">
 		<% if !current_page?(new_user_session_path) && user_signed_in?%>
        <%= render 'layouts/navigation' %>
		<% end %>
        <div id="wrapper" auth-token="<%= current_user.authentication_token %>" email="<%= current_user.email %>">
          <%= render 'layouts/messages' %>
          <%= yield %>
        </div>
        <% if !current_page?(new_user_session_path) %>
        <% end %>
		<!-- 
			<footer>
				<%= render 'layouts/footer' %>
			</footer> -->
	</body>
</html>
